@model WebDoAn.Models.Menu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Bạn chắc chắn muốn xóa?</h5>
            <div class="card">
                <div class="card-body">
                    <div>
                        <h4>@Model.MenuName</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsActive)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ControllerName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ControllerName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ActionName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ActionName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Levels)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Levels)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ParentID)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ParentID)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Link)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Link)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuOrder)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuOrder)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Position)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Position)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="MenuID" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

