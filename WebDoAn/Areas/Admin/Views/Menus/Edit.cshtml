@model WebDoAn.Models.Menu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Thêm mới Menu</h5>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MenuID" />
                                <div class="form-group mb-3">
                                    <label asp-for="MenuName" class="control-label"></label>
                                    <input asp-for="MenuName" class="form-control" />
                                    <span asp-validation-for="MenuName" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="ControllerName" class="control-label"></label>
                                    <input asp-for="ControllerName" class="form-control" />
                                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="ActionName" class="control-label"></label>
                                    <input asp-for="ActionName" class="form-control" />
                                    <span asp-validation-for="ActionName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Levels" class="control-label"></label>
                                    <input asp-for="Levels" class="form-control" />
                                    <span asp-validation-for="Levels" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="ParentID" class="control-label"></label>
                                    <input asp-for="ParentID" class="form-control" />
                                    <span asp-validation-for="ParentID" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Link" class="control-label"></label>
                                    <input asp-for="Link" class="form-control" />
                                    <span asp-validation-for="Link" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="MenuOrder" class="control-label"></label>
                                    <input asp-for="MenuOrder" class="form-control" />
                                    <span asp-validation-for="MenuOrder" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Position" class="control-label"></label>
                                    <input asp-for="Position" class="form-control" />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3 form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="IsActive" />Hiển thị
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


