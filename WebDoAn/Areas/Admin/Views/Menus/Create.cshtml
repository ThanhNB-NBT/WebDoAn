@model WebDoAn.Models.Menu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Thêm mới Menu</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="MenuName" class="control-label form-label">Tên Menu</label>
                                <input asp-for="MenuName" class="form-control" />
                                <span asp-validation-for="MenuName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ControllerName" class="control-label form-label">Tên Controller</label>
                                <input asp-for="ControllerName" class="form-control" />
                                <span asp-validation-for="ControllerName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ActionName" class="control-label form-label">Tên Action</label>
                                <input asp-for="ActionName" class="form-control" />
                                <span asp-validation-for="ActionName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Levels" class="control-label form-label">Level</label>
                                <input asp-for="Levels" class="form-control" />
                                @* <select asp-for="Levels" class="form-control" asp-items="">
                                    <option value="0" selected>--[Chọn danh mục]--</option>
                                </select> *@
                                <span asp-validation-for="Levels" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ParentID" class="control-label form-label">Menu cha</label>
                                <select asp-for="ParentID" class="form-control">
                                    <option value="0" selected>--[Chọn Menu cha]--</option>
                                    @foreach (var menu in (List<SelectListItem>)ViewData["MenuNames"])
                                    {
                                        <option value="@menu.Value">@menu.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="ParentID" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Link" class="control-label form-label">Link</label>
                                <input asp-for="Link" class="form-control" />
                                <span asp-validation-for="Link" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="MenuOrder" class="control-label form-label">Thứ tự</label>
                                <input asp-for="MenuOrder" class="form-control" />
                                <span asp-validation-for="MenuOrder" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Position" class="control-label form-label">Vị trí</label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 form-check bottom-0">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsActive" />Hiển thị
                                </label>
                            </div>
                            <div class="form-group mb-3">
                                <input type="submit" value="Thêm mới" class="btn btn-primary"/>
                            </div>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Kích hoạt Selectize cho dropdown list
        $('#controllerSelect').selectize({
            create: true,  // Cho phép tạo giá trị mới
            sortField: 'text'  // Sắp xếp theo giá trị text
        });
    });
</script>



