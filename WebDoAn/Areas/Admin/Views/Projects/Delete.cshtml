@model WebDoAn.Models.Project

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <h5 class="card-title fw-semibold mb-4">Bạn chắc chắn muốn xóa?</h5>
        <div class="card">
            <div class="card-body">
                <h4>@Model.ProjectName</h4>
                <dl class="row">
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.ProjectName):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.ProjectName)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Category):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Category)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Image):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Image)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.IsActive):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Title):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Detail):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Detail)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.CreatedDate):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Client):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Client)
                    </dd>
                    <dt class="col-sm-2 fw-semibold border-bottom-0">
                        @Html.DisplayNameFor(model => model.Link):
                    </dt>
                    <dd class="col-sm-10 fw-semibold border-bottom-0">
                        @Html.DisplayFor(model => model.Link)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProjectId" />
                    <input type="submit" value="Xóa" class="btn btn-danger btn-delete m-1" /> |
                    <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>